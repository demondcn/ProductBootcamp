// Prisma schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Asegúrate de que tu DATABASE_URL esté configurada
}

model Usuario {
  id         BigInt   @id @default(autoincrement())
  nombre     String
  contraseña String
  servicios  Servicio[] // Relación uno a muchos con la tabla Servicios
}

model Servicio {
  id              BigInt    @id @default(autoincrement())
  usuario_id      BigInt
  tipo_servicio   String
  fecha_solicitud DateTime  @default(now()) @db.Timestamptz

  usuario         Usuario   @relation(fields: [usuario_id], references: [id]) // Relación con la tabla Usuario

  @@index([usuario_id])
}
